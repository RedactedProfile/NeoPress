{% extends '@AppBundle/Views/Admin/layout.html.twig' %}

{% block container %}
    <div class="row">
        <div class="col-md-12">
            <div class="page-header">
                <h1>Posts</h1>
            </div>
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>ID</th><th>Title</th><th>Author</th><th>Action</th>
                </tr>
                </thead>
                <tbody>
                {% for post in posts %}
                <tr>
                    <td>{{ post.id }}</td>
                    <td>{{ post.title }}</td>
                    <td>{{ post.author.displayName }}</td>
                    <td><a href="{{ path("admin_posts_edit", {"id":post.id}) }}">Edit</a></td>
                </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}